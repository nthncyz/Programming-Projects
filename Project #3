#include <iostream>
#include <iomanip>

using namespace std;

int main(){
    double radius, area;
    const double PI = 3.14;

    cout << "Enter the radius of the circle (m): ";
    cin >> radius;

    area = PI * radius * radius;

    cout << fixed << setprecision(2) << "The area of the circle is: " << area << " square meters" << endl;
    
    return 0;
}
